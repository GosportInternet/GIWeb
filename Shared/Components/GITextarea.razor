
<div class="form-group has-placeholder">
    <label for="@Id">Message</label>
    <i class="fa fa-edit color-main"></i>
    <textarea aria-required="true" rows="@Rows" cols="@Columns" id="@Id" class="form-control @CustomClass" placeholder="@Placeholder" style="resize: @SetIsResizeable();" @bind="Text"></textarea>
</div>

@code {
    [Parameter]
    public string Text { get; set; }
    [Parameter]
    public string Placeholder { get; set; } = "Message";

    [Parameter]
    public string Columns { get; set; } = "50";
    [Parameter]
    public string Rows { get; set; } = "6";
    [Parameter]
    public string Id { get; set; }

    [Parameter]
    public string CustomClass { get; set; }

    [Parameter]
    public bool IsResizeable { get; set; }

    public string SetIsResizeable()
    {
        switch (IsResizeable)
        {
            case true:
                return "";
                break;
            case false:
                return "none";
                break;
        }
    }
}
