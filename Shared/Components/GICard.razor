@if (HasShadow)
{
    <div class="card text-@GetAlignment() @GetShadow() @CustomClass">
        <div class="card-header">
            @CardHeader
        </div>
        <div class="card-body">
            @CardContent
        </div>
        <div class="card-footer">
            @CardFooter
        </div>
    </div>
}
else
{
    <div class="card text-@GetAlignment() @GetShadow() @CustomClass">
        <div class="card-header">
            @CardHeader
        </div>
        <div class="card-body">
            @CardContent
        </div>
        <div class="card-footer">
            @CardFooter
        </div>
    </div>
}

@code
{

    [Parameter]
    public RenderFragment CardHeader { get; set; }
    [Parameter]
    public RenderFragment CardContent { get; set; }
    [Parameter]
    public RenderFragment CardFooter { get; set; }

    [Parameter]
    public bool HasShadow { get; set; }
    [Parameter]
    public string CustomClass { get; set; }

    [Parameter]
    public Alignment Align { get; set; } = Alignment.Center;

    private string GetShadow()
    {
        if (HasShadow)
        {
            return "shadow-lg";
        }
        return "";
    }

    private string GetAlignment()
    {
        switch (Align)
        {
            case Alignment.Left:
                return "left";
                break;
            case Alignment.Center:
                return "center";
                break;
            case Alignment.Right:
                return "right";
                break;
        }
        return "";
    }

    public enum Alignment
    {
        Center,
        Left,
        Right
    }
}